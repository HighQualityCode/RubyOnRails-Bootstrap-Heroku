{
  "name": "Rails Starter App",
  "description": "A Starter Application based on Ruby2 Rails4 and Twitter Bootstrap, deployable on Heroku, developable on Nitrous.IO",
  "keywords": [
    "Ruby 2",
    "Rails 4",
    "Bootstrap",
    "Font Awesome",
    "Nitrous.IO"
  ],
  "website": "http://ruby2-rails4-bootstrap-heroku.herokuapp.com/",
  "repository": "https://github.com/diowa/ruby2-rails4-bootstrap-heroku",
  "success_url": "/",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "RAILS_ENV": "production",
    "SECRET_KEY_BASE": {
      "description": "This gets generated",
      "generator": "secret"
    }
  },
  "addons": [
    "heroku-postgresql:hobby-dev",
    "pgbackups:auto-month",
    "newrelic:stark",
    "papertrail"
  ]
}
